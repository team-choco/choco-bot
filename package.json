{
  "name": "kitkat-bot",
  "version": "0.0.0-local.0",
  "sha": "0.0.0-local.0",
  "private": true,
  "license": "AGPL-3.0-only",
  "main": "bot/bot.ts",
  "homepage": "https://github.com/butter-cookie-kitkat/kitkat-bot",
  "bugs": "https://github.com/butter-cookie-kitkat/kitkat-bot/issues",
  "contributors": [
    "Nick Woodward <nick@salte.io>"
  ],
  "scripts": {
    "build": "ts-node ./scripts/version.ts",
    "start": "ts-node .",
    "start:live": "ts-node -T .",
    "validate": "run-p test:coverage test:integration lint",
    "test": "jest",
    "test:integration": "npm run test -- --config jest.integration.config.js",
    "test:coverage": "npm run test -- --coverage",
    "test:tdd": "npm run test -- --watch",
    "lint": "eslint --ignore-path .gitignore bot/**/*.ts",
    "lint:fix": "eslint --ignore-path .gitignore --fix"
  },
  "engines": {
    "node": "12.0.x"
  },
  "dependencies": {
    "@team-choco/command-plugin": "^0.1.8",
    "@team-choco/core": "^0.1.8",
    "@team-choco/discord-platform": "^0.1.8",
    "@team-choco/utils": "^0.1.8",
    "@team-choco/xiv": "^0.1.2",
    "chalk": "^4.1.0",
    "dotenv": "^8.2.0",
    "node-fetch": "^2.6.0",
    "outdent": "^0.7.1",
    "sequelize": "^5.0.0",
    "sequelize-typescript": "^1.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@team-choco/shell-platform": "^0.1.9",
    "@types/chance": "^1.1.0",
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.3",
    "@types/node": "^12.12.47",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "chance": "^1.1.6",
    "eslint": "^7.3.1",
    "eslint-plugin-tsdoc": "^0.2.5",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "remove-lockfiles": "^2.1.3",
    "sqlite3": "^5.0.0",
    "ts-jest": "^26.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && remove-lockfiles"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add --force"
    ],
    "*.json": [
      "git add --force"
    ]
  }
}
